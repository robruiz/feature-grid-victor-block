{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "feature-grid-victor/feature-grid-card",
	"parent": [ "feature-grid-victor/feature-grid-nav" ],
	"version": "0.1.0",
	"title": "Feature Grid Card",
	"category": "widgets",
	"icon": "grid-view",
	"description": "A card to display product/service features",
	"example": {},
	"supports": {
		"html": false,
		"anchor": true,
		"ariaLabel": true
	},
	"attributes": {
        "label": {
            "type": "string",
            "default": "placeholder"
        },
        "title": {
            "type": "string",
            "default": "placeholder"
        },
        "description": {
            "type": "string",
            "default": "placeholder"
        },
		"mediaId": {
			"type": "number",
			"default": 0
		},
		"mediaUrl": {
			"type": "string",
			"default": ""
		},
		"link": {
			"selector": "button",
			"source": "attribute",
			"type": "string",
			"default": "",
			"attribute": "data-link"
		}
	},
	"textdomain": "feature-grid-victor",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
